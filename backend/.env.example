# =============================================================================
# Advisor OSC - Backend Environment Variables (OSC Public Version)
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files with real credentials!

# =============================================================================
# Database
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql+asyncpg://advisor:your_password@localhost:5432/advisor_db

# =============================================================================
# LLM API Keys
# =============================================================================
# OpenAI API Key (for GPT-4, GPT-4o, GPT-3.5-turbo)
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini API Key (for Gemini Pro, Gemini Flash)
GOOGLE_API_KEY=your-google-api-key

# Anthropic Claude API Key (for Claude 3 Opus, Sonnet, Haiku)
CLAUDE_API_KEY=sk-ant-your-anthropic-api-key

# Perplexity API Key (for web search capabilities)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# =============================================================================
# RAG / Document Processing
# =============================================================================
# Qdrant vector database
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Cohere API Key (for Reranker)
COHERE_API_KEY=your-cohere-api-key

# Azure Document Intelligence (optional, for PDF/document parsing)
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-azure-document-intelligence-key
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# =============================================================================
# Authentication
# =============================================================================
# JWT Secret Key (IMPORTANT: Change this in production!)
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# JWT Token expiration (in minutes)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Debug mode (set to false in production)
DEBUG=false

# =============================================================================
# Caching (optional)
# =============================================================================
# Redis URL (optional, for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Ollama (optional, for local LLM)
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Web Search (optional)
# =============================================================================
# Tavily API Key (alternative to Perplexity)
TAVILY_API_KEY=your-tavily-api-key

# =============================================================================
# Data Storage (optional)
# =============================================================================
# Base path for storing documents and videos (default: /app/data in Docker)
DATA_BASE_PATH=/app/data
